{
  "name": "react-spring-carousel",
  "version": "1.0.1",
  "description": "The world's first responsive carousel that can be server side rendered",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "react-native": "./esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "esm/**"
  ],
  "scripts": {
    "build": "rm -rf dist && rm -rf esm && yarn build:esm && yarn build:cjs && yarn tsc",
    "build:cjs": "ncc build src/index.ts -s -o dist -m -e react",
    "build:esm": "tsc --module ES6 --outDir esm",
    "watch": "tsc --watch",
    "types:check": "tsc --noEmit",
    "format": "prettier --write \"{src,test,examples}/**/*.{ts,tsx}\"",
    "lint": "eslint \"{src,test,examples}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"{src,test,examples}/**/*.{ts,tsx}\" --fix",
    "test": "react-scripts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run types:check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix",
      "npm run format",
      "git add"
    ]
  },
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "react": "^16.11.0",
    "react-spring": "^8.0.0",
    "react-use-gesture": "^7.0.0"
  },
  "devDependencies": {
    "@types/styled-jsx": "^2.2.8",
    "@zeit/ncc": "0.20.5",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "react-scripts": "^3.4.1"
  },
  "dependencies": {
    "@types/jest": "^26.0.7",
    "@types/lodash": "^4.14.158",
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "lodash": "^4.17.19",
    "resize-observer-polyfill": "^1.5.1",
    "typescript": "^3.9.7"
  }
}
